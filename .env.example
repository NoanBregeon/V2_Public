# Configuration Bot Discord Twitch V2
# =====================================

# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token_here
GUILD_ID=your_discord_server_id_here

# Twitch Configuration
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_USER_TOKEN=your_twitch_user_token_here
TWITCH_BOT_TOKEN=oauth:your_twitch_bot_token_here
STREAMER_USERNAME=your_twitch_username_here

# Discord Channels (optionnels)
LOGS_CHANNEL_ID=channel_id_for_logs
NOTIFICATIONS_CHANNEL_ID=channel_id_for_stream_notifications
MODERATION_CHANNEL_ID=channel_id_for_moderation_logs

# Discord Roles (optionnels - se créent automatiquement si non définis)
VIP_ROLE_ID=role_id_for_twitch_vips
MODERATOR_ROLE_ID=role_id_for_twitch_mods
SUBSCRIBER_ROLE_ID=role_id_for_twitch_subs

# Voice Channels
CREATE_VOICE_CHANNEL_ID=voice_channel_id_to_trigger_temp_channel_creation
VOICE_INSTRUCTIONS_CHANNEL_ID=channel_id_for_voice_instructions
VOICE_LOGS_CHANNEL_ID=channel_id_for_voice_logs

# Voice Categories
# Si défini, seuls les salons dans cette catégorie seront supprimés automatiquement
# Sinon, utilise la catégorie du canal CREATE_VOICE_CHANNEL_ID
VOICE_CATEGORY_ID=category_id_for_temp_voice_channels

# Welcome System
WELCOME_CHANNEL_ID=channel_id_for_welcome_messages
DEFAULT_ROLE_ID=role_id_to_assign_new_members

# Twitch Bridge (optionnel)
TWITCH_BOT_USERNAME=your_twitch_bot_username
TWITCH_CHANNELS=channel1,channel2,channel3
TWITCH_RELAY_CHANNEL_ID=discord_channel_for_twitch_relay
TWITCH_REMOVE_FORMAT=true

# Multi-guild support (optionnel)
STAFF_GUILD_ID=staff_guild_id
COMMUNITY_GUILD_ID=community_guild_id

# Bot Configuration
NODE_ENV=production
DEBUG=false