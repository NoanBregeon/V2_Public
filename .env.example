# --- Discord Auth ---
DISCORD_TOKEN=
DISCORD_CLIENT_ID=

# --- Guilds (multi-serveurs) ---
# Serveur principal pour l'enregistrement des slash commands
GUILD_ID=
STAFF_GUILD_ID=
COMMUNITY_GUILD_ID=

# --- Twitch (Chat Relay via tmi.js) ---
TWITCH_BOT_USERNAME=          # ou le compte bot dédié
TWITCH_BOT_TOKEN=
TWITCH_CHANNELS=              # virgules si plusieurs
TWITCH_RELAY_CHANNEL_ID=
TWITCH_REMOVE_FORMAT=

# --- Twitch (API Helix pour mods/vips/bans) ---
TWITCH_CLIENT_ID=
TWITCH_USER_TOKEN=   # needs moderator:manage:banned_users etc.
TWITCH_CLIENT_SECRET=
STREAMER_USERNAME=

# --- Legacy (compatibilité ancien code) ---
SYNC_CHANNEL_ID=
LOG_CHANNEL_ID=

# --- Channels (Discord internes) ---
LOGS_CHANNEL_ID=
NOTIFICATIONS_CHANNEL_ID=
MODERATION_CHANNEL_ID=
LIVE_NOTIFICATIONS_CHANNEL_ID=
VOICE_INSTRUCTIONS_CHANNEL_ID=
VOICE_LOGS_CHANNEL_ID=
WELCOME_CHANNEL_ID=

# --- Roles ---
VIP_ROLE_ID=
MODERATOR_ROLE_ID=
SUBSCRIBER_ROLE_ID=
DEFAULT_ROLE_ID=
ADMIN_ROLE_ID=

# --- Voice Temp ---
CREATE_VOICE_CHANNEL_ID=
VOICE_CATEGORY_ID=
VOICE_NAME_TEMPLATE=
VOICE_DEFAULT_LIMIT=

# --- Stats / Staff (ancien bot) ---
STAFF_VIP_CHANNEL_ID=
STAFF_MOD_CHANNEL_ID=
STAFF_STATS_CHANNEL_ID=
STAFF_LOGS_CHANNEL_ID=
COMMUNITY_CHAT_CHANNEL_ID=

# --- Runtime ---
NODE_ENV=
DEBUG=
CLEAN_COMMANDS_ON_START=

# --- Live ping (notifications) ---
# Valeur par défaut pour activer le ping lors du démarrage du bot (true/false)
LIVE_PING_ENABLED=

# Rôle à mentionner par défaut (ID de rôle). Laisser vide pour ne pas mentionner de rôle par défaut.
LIVE_PING_ROLE_ID=
# Message personnalisé à inclure dans les notifications de live. Laisser vide pour aucun message.
LIVE_CUSTOM_MESSAGE=